@model List<FoodCategory>



@if (Model.Count == 0)
{
    @await Html.PartialAsync("_noMenu")
}
else
{



    <div class="menu">
        @foreach (var item in Model)
        {
            <div class="category cat">
                <div class="details">

                    <div class="img">
                        <img src="~/img/@item.imageUrl" alt="">
                    </div>
                    <div class="details-sub">
                        <div class="go-link">
                            <a href="#">@item.Name</a>
                        </div>
                    </div>


                </div>
            </div>
        }
        
