@model List<FoodCategory>

<div class="row">
    <div class="col-md-12">
        <h1>Admin Food Categories</h1>
        <hr />
        <a href="/admin/CreateFoodCategory" class="btn btn-primary">Add FoodCategory</a> <br />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width : 30px;">Id</td>
                    <td style="width : 60px">Image</td>
                    <td style="width:20px;"> Name </td>
                    <td style="width:20px;">Url</td>
                    
                  
                    <td style="width : 135px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FoodCategoryId</td>
                            <td><img style="width : 60px" src="~/img/@item.imageUrl" /></td>
                            <td>@item.Name</td>
                            <td>@item.Url</td>
                           
                            

                            <td>
                                <a href="/admin/EditFoodCategory/@item.FoodCategoryId" class="btn btn-primary btn-sm mr-2">Edit</a>

                                <form style="display : inline;" method="post" asp-controller="Admin" asp-action="DeleteFoodCategory">
                                    <input type="hidden" name="FoodCategoryId" value="@item.FoodCategoryId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>



                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td class="alert alert-warning" colspan="5">
                            <h3>No Category</h3>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>

